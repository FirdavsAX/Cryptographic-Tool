<Window x:Class="Cryptographic_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Cryptographic_Tool.Views"
        mc:Ignorable="d"
        Background="#121212"
        Title="Cryptographic Explorer" Height="700" Width="1100"
        FontFamily="Segoe UI">

    <Window.Resources>
        <ResourceDictionary>
            <!-- 1. Custom Dark Theme Colors -->
            <Color x:Key="DarkBackgroundColor">#121212</Color>
            <Color x:Key="DarkSurfaceColor">#1E1E1E</Color>
            <Color x:Key="DarkElementColor">#2C2C2C</Color>
            <Color x:Key="LightTextColor">#CCCCCC</Color>

            <!-- 2. Custom Brushes -->
            <SolidColorBrush x:Key="DarkBackground" Color="{StaticResource DarkBackgroundColor}" />
            <SolidColorBrush x:Key="DarkSurface" Color="{StaticResource DarkSurfaceColor}" />
            <SolidColorBrush x:Key="DarkElement" Color="{StaticResource DarkElementColor}" />
            <SolidColorBrush x:Key="LightText" Color="{StaticResource LightTextColor}" />

            <!-- Accent Brushes (As per plan) -->
            <SolidColorBrush x:Key="AccentOrangeBrush" Color="#FFFF9800" />
            <!-- Hashing -->
            <SolidColorBrush x:Key="AccentTealBrush" Color="#FF009688" />
            <!-- Action -->
            <SolidColorBrush x:Key="AccentGreenBrush" Color="#FF4CAF50" />
            <!-- Symmetric -->
            <SolidColorBrush x:Key="AccentBlueBrush" Color="#FF2196F3" />
            <!-- Asymmetric -->
            <SolidColorBrush x:Key="AccentRedBrush" Color="#FFF44336" />
            <!-- Signature -->

            <!-- 3. Custom Styles for Dark Theme -->
            <Style TargetType="{x:Type Window}">
                <Setter Property="Background" Value="{StaticResource DarkBackground}" />
                <Setter Property="Foreground" Value="{StaticResource LightText}" />
            </Style>

            <Style x:Key="AppDarkTextBox" TargetType="{x:Type TextBox}">
                <Setter Property="Background" Value="{StaticResource DarkElement}" />
                <Setter Property="Foreground" Value="{StaticResource LightText}" />
                <Setter Property="BorderBrush" Value="{StaticResource LightText}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Padding" Value="8,4" />
                <Setter Property="SnapsToDevicePixels" Value="True" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>

            <Style x:Key="AppDarkGroupBox" TargetType="{x:Type GroupBox}">
                <Setter Property="Foreground" Value="{StaticResource LightText}" />
                <Setter Property="BorderBrush" Value="{StaticResource LightText}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Background" Value="{StaticResource DarkSurface}" />
            </Style>

            <Style x:Key="AppRaisedButton" TargetType="{x:Type Button}">
                <Setter Property="Background" Value="{StaticResource AccentTealBrush}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Padding" Value="15,10" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF00796B"/>
                                    <!-- Darker Teal -->
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="TabHeaderStyle" TargetType="{x:Type TabItem}">
                <Setter Property="Background" Value="{StaticResource DarkSurface}"/>
                <Setter Property="Foreground" Value="{StaticResource LightText}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type TabItem}">
                            <Border x:Name="Border" BorderBrush="{StaticResource DarkElement}" BorderThickness="0,0,0,2" Margin="0,0,-1,0" Padding="12,6">
                                <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" RecognizesAccessKey="True"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentOrangeBrush}"/>
                                    <Setter Property="Foreground" Value="{StaticResource AccentOrangeBrush}"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#383838"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <DockPanel LastChildFill="True" Margin="12">
        <!-- Header -->
        <Border DockPanel.Dock="Top" Padding="12" Background="{StaticResource DarkSurface}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Cryptographic Explorer" FontSize="20" FontWeight="SemiBold"
                           VerticalAlignment="Center" Foreground="{StaticResource AccentOrangeBrush}" />
                <TextBlock Text=" — .NET 9 WPF by Firdavs Jumayev" Margin="8,0,0,0" VerticalAlignment="Center"
                           Foreground="{StaticResource LightText}" />
            </StackPanel>
        </Border>

        <!-- Main Tabs -->
        <!-- Removed materialDesign:ColorZoneAssist.Mode="PrimaryDark" -->
        <TabControl Background="{StaticResource DarkBackground}" Margin="0,12,0,0">

            <!-- 1. Hashing Tab -->
            <TabItem Header="Hashing" Style="{StaticResource TabHeaderStyle}" Foreground="{StaticResource AccentOrangeBrush}">
                <views:HashingView />
            </TabItem>

            <!-- 2. Symmetric Encryption Tab -->
            <TabItem Header="Symmetric Encryption" Style="{StaticResource TabHeaderStyle}" Foreground="{StaticResource AccentGreenBrush}">
                <Grid Margin="12">
                    <TextBlock Text="Symmetric Encryption UI will be implemented here (AES, 3DES, ChaCha20) using a Green Accent."
                               Foreground="{StaticResource AccentGreenBrush}" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Top" />
                </Grid>
            </TabItem>

            <!-- 3. Asymmetric Encryption Tab -->
            <TabItem Header="Asymmetric Encryption" Style="{StaticResource TabHeaderStyle}" Foreground="{StaticResource AccentBlueBrush}">
                <Grid Margin="12">
                    <TextBlock Text="Asymmetric Encryption UI will be implemented here (RSA, ECC) using a Blue Accent."
                               Foreground="{StaticResource AccentBlueBrush}" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Top" />
                </Grid>
            </TabItem>

            <!-- 4. Digital Signatures Tab -->
            <TabItem Header="Digital Signatures" Style="{StaticResource TabHeaderStyle}" Foreground="{StaticResource AccentRedBrush}">
                <Grid Margin="12">
                    <TextBlock Text="Digital Signatures UI will be implemented here (RSA-SHA256, ECDSA) using a Red Accent."
                               Foreground="{StaticResource AccentRedBrush}" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Top" />
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
